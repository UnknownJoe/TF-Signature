@{
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
    </head>
    <body>
               
        @if (Model.TextBlocks.ContainsKey("Header") == true)
        {
            <h2>@Model.TextBlocks["Header"]</h2>
        }

        <b>Mit freundlichen Grüßen</b><br />
        @if (@Model != null && @Model.Person != null)
        {
            <b>@Model.Person.FirstName @Model.Person.LastName</b><br />
            @foreach (var cd in @Model.Person.ContactData)
            {
                <b>@cd.Description: </b>@cd.Value<br />
            }
        }
    </body>
</html>
}
